{
  "compilerOptions": {
    "alwaysStrict": true,
    "declaration": true,
    "lib": ["dom", "es2017"],
    "module": "commonjs",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "outDir": "./dist",
    "removeComments": true,
    "sourceMap": true,
    "strictFunctionTypes": true,
    "target": "es5"
  },
  "include": ["src/**/*"]
}

{
  "compilerOptions": {
    "alwaysStrict": true,
    "declaration": true,
    "lib": ["es2015", "es2017.object"],
    "module": "commonjs",
    // "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "outDir": "./dist",
    "removeComments": true,
    "sourceMap": true,
    "strictFunctionTypes": true,
    "target": "es5"
  },
  "include": ["src/**/*"]
}
